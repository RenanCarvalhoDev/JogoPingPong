<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Jogo PingPong</title>
        <style>
            * {
                overflow: hidden;
                margin: 0;
                padding: 0;
            }
        </style>
    </head>
    <body>
        <canvas>
        <script>
            const canvasEl = document.querySelector("canvas")
            const canvasCtx = canvasEl.getContext("2d")

            const linhaLargura = 15
            const gapx = 10
            var resultado = true;
            

            const mouse = {
                x:0,
                y:0,
            }

            const field = {
                w: window.innerWidth,
                h: window.innerHeight,
                draw: function (){
                    //desneho do campo
                    canvasCtx.fillStyle = "#289047"
                    canvasCtx.fillRect(0, 0,this.w, this.h)
                },

            }

            const line = {
                w: 15,
                h: field.h,
                draw: function (){

                    //desenho da linha do meio do campo
                    canvasCtx.fillStyle = "#ffffff"
                    canvasCtx.fillRect(field.w /2 - this.w /2,0,this.w,this.h)
                },
            }
            
            const leftPaddle = {

                x: gapx,
                y: 0,
                w: line.w,
                h: 200,
                _move: function(){
                    this.y = mouse.y - this.h/2 
                },
                draw: function(){
                    //deseho raqeute esquerda
                    canvasCtx.fillStyle = "#ffffff"
                    canvasCtx.fillRect(this.x,this.y,this.w,this.h)

                    this._move()
                },

            }

            const rightPaddle = {

                x: field.w - line.w -10,
                y: 0,
                w: line.w,
                h: 200,
                speed: 2,
                _move: function(){
                    if(this.y + this.h /2 < ball.y +ball.r){
                        this.y += this.speed
                    }else{
                        this.y -= this.speed
                    }
                },
                speedUp: function(){
                    this.speed += 1.5
                },
                draw: function(){
                   
                    //desenho da raquete direita
                    canvasCtx.fillStyle = "#ffffff"
                    canvasCtx.fillRect(this.x,this.y,this.w,this.h)

                    this._move()
                },

            }

            const score = {
                human: 0,
                computer: 0,
                increseHuman: function(){
                    if(this.human < 5 ){
                        this.human ++
                    }else{
                        this.drawVencedor()   
                    }
                },
                increseComputer: function(){
                    if(score.computer < 5){
                        this.computer ++
                    }else {
                        this.drawVencedor()
                     }
                },
                
                draw: function(){
                    //desenhando o placar
                    

                    canvasCtx.font = "bold 72px Arial"
                    canvasCtx.textAlign = "center"
                    canvasCtx.textBaseline = "center"
                    canvasCtx.fillStyle = "#281047"
                    canvasCtx.fillText(this.human,field.w/4,60)
                    canvasCtx.fillText(this.computer, field.w/4 + field.w/2,60)
                    

                },
                drawVencedorHuman: function(){
                    
                        
                        canvasCtx.font = "bold 72px Arial"
                        canvasCtx.textAlign = "center"
                        canvasCtx.textBaseline = "top"
                        canvasCtx.fillStyle = "#281047"
                        canvasCtx.fillText("WINNER",field.w/4,200)
                        canvasCtx.fillText("LOSER", field.w/4 + field.w/2,200)
                          
                    
                },
                    
                drawVencedorComputer: function(){        
                        
                        canvasCtx.font = "bold 72px Arial"
                        canvasCtx.textAlign = "center"
                        canvasCtx.textBaseline = "top"
                        canvasCtx.fillStyle = "#281047"
                        canvasCtx.fillText("LOSER",field.w/4,200)
                        canvasCtx.fillText("WINNER", field.w/4 + field.w/2,200)
                         
                    
                },
                
            } 

            const ball = {
                x: field.w /2,
                y: field.h /2,
                r: 20,
                speed: 5,
                directionX: 1,
                directionY: 1,
                _calcPosition: function(){
                   
                    
                    //verificar se o jogador fez 1 ponto(x > largura do campo)
                        if(this.x > field.w - this.r - rightPaddle.w - leftPaddle.x){
                        //verifica se a raquete direita esta na posição y da bola
                            if(this.y + this.r > rightPaddle.y && this.y - this.r < rightPaddle.y + rightPaddle.h){

                                this._reverseX()
                            }else{
                                
                                score.increseHuman()
                                this._pointUp()
                                
                            }
                        }    

                    //verificar se o jogador 2 fez um ponto(x<0)
                        if (this.x < this.r + leftPaddle.w + gapx){
                        //verifica se a raquete esquerda esta na posição y da bola
                            if(this.y + this.r > leftPaddle.y &&
                                this.y - this.r < leftPaddle.y + leftPaddle.h){
                                this._reverseX()
                            }else {
                                
                                score.increseComputer()
                                this._pointUp()
                                
                            }
                        }
                                    
                    
                    
                    // verifica as laterais infereio e superior do campo
                    if((this.y - this.r < 0 && this.directionY < 0)||
                    (this.y > field.h - this.r && this.directionY > 0)){
                        // inverte o valor de y da bola no campo
                        this._reverseY()
                    }
                },
                //função para reverter o valor de x
                _reverseX: function (){
                    this.directionX *= -1
                },
                //função para reverter o valor de y
                _reverseY: function (){
                    this.directionY *= -1
                },
                _speedUp: function(){
                    this.speed +=2
                },
                _pointUp: function(){
                    this._speedUp()
                    rightPaddle.speedUp()
                    this.x = field.w /2
                    this.y = field.h /2
                },
                ////função para movimentar a bola
                _move: function(){
                    this.x += this.directionX * this.speed
                    this.y += this.directionY * this.speed
                },
                draw: function (){
                    //densneho da bola
                    canvasCtx.fillStyle = "#ffffff"
                    canvasCtx.beginPath()
                    canvasCtx.arc(this.x,this.y,this.r,0, 2 * Math.PI, false)
                    canvasCtx.fill()

                    this._calcPosition()
                    this._move()
                },
            }

            function setup(){
                canvasEl.width = canvasCtx.width = field.w
                canvasEl.height = canvasCtx.height = field.h


            }
            function fimGame(){
                    
                    resultado = window.confirm("deseja jogar outra vez?")
            }
            function draw(){
                
                field.draw()
                line.draw()
                
                leftPaddle.draw()
                rightPaddle.draw()
                if(score.human <5 && score.computer < 5 && resultado == true){
                score.draw()
                ball.draw()
                } else if(score.human >= 5 || score.computer >= 5){
                    if(score.human >= 5 && score.computer < 5){
                        score.drawVencedorHuman()
                        window.alert("FIM DE JOGO")
                        
                        
                    }else if (score.human < 5 && score.computer >= 5){
                        score.drawVencedorHuman()
                        window.alert("FIM DE JOGO")
                        
                    }
                    if(resultado == true){
                        score.human = 0
                        score.computer = 0
                    }else{
                        alert("Obrigao por Jogar, se quiser jogar novamente, de um refresh na pagina")
                    
                    }
                    fimGame()
                }
            }
               
    
            setup()
            draw()
           

            
            window.setInterval(draw, 1000/60)

            canvasEl.addEventListener('mousemove', function(e){
                mouse.x = e.pageX
                mouse.y = e.pageY
            } )

            
            
        </script>
    </body>
</html>
